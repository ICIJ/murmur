{
  "name": "@icij/murmur",
  "version": "1.6.3",
  "private": false,
  "description": "Murmur is ICIJ's Design System for Bootstrap 4 and Vue.js",
  "author": "promera@icij.org",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "yarn build:docs && yarn build:lib",
    "lint": "vue-cli-service lint",
    "deploy": "node deploy.js",
    "build:docs": "vue-cli-service build --dest dist/docs",
    "build:lib": "vue-cli-service build --target lib --dest dist/lib 'lib/main.js'",
    "postpublish": "yarn deploy",
    "prepublishOnly": "yarn build",
    "test:unit": "vue-cli-service test:unit"
  },
  "dependencies": {
    "@fortawesome/fontawesome": "^1.1.4",
    "@fortawesome/fontawesome-svg-core": "^1.2.1",
    "@fortawesome/free-brands-svg-icons": "^5.1",
    "@fortawesome/free-regular-svg-icons": "^5.1.1",
    "@fortawesome/free-solid-svg-icons": "^5.1",
    "@fortawesome/vue-fontawesome": "^0.0.22",
    "bootstrap": "^4.1.3",
    "bootstrap-vue": "^2.0.0-rc.11",
    "clipboard": "^2.0.4",
    "es6-symbol": "^3.1.1",
    "jquery": "^3.3.1",
    "lodash": "^4.17.11",
    "promise-polyfill": "^8.1.0",
    "vue": "^2.5.x",
    "vue-headroom": "^0.9.0",
    "vue-i18n": "^8.4.0"
  },
  "devDependencies": {
    "@kazupon/vue-i18n-loader": "^0.3.0",
    "@vue/cli-plugin-babel": "^3.1.1",
    "@vue/cli-plugin-eslint": "^3.1.5",
    "@vue/cli-plugin-unit-jest": "^3.2.0",
    "@vue/cli-service": "^3.4.0",
    "@vue/test-utils": "^1.0.0-beta.29",
    "@vuepress/markdown": "^1.0.0-alpha.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "chalk": "^2.4.1",
    "chroma-js": "^1.4.1",
    "eslint": "^5.8.0",
    "eslint-plugin-vue": "^5.0.0-0",
    "front-matter": "^3.0.1",
    "gh-pages": "^2.0.1",
    "gray-matter": "^4.0.1",
    "highlight.js": "^9.13.1",
    "json-loader": "^0.5.7",
    "loader-utils": "^1.1.0",
    "markdown-it-container": "^2.0.0",
    "markdown-it-highlightjs": "^3.0.0",
    "node-sass": "^4.10.0",
    "ora": "^3.0.0",
    "sass-extract": "^2.1.0",
    "sass-extract-loader": "^1.1.0",
    "sass-loader": "^7.0.1",
    "toml": "^2.3.3",
    "url-join": "^4.0.0",
    "vue-cli-plugin-i18n": "^0.5.1",
    "vue-docgen-api": "^2.6.10",
    "vue-router": "^3.0.1",
    "vue-template-compiler": "^2.5.x",
    "vuex": "^3.0.1"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "jest": {
    "globalSetup": "./tests/unit/setup.js",
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "vue"
    ],
    "transform": {
      "^.+\\.vue$": "vue-jest",
      ".+\\.(css|styl|less|sass|scss|svg|png|jpg|ttf|woff|woff2)$": "jest-transform-stub",
      "^.+\\.jsx?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(bootstrap-vue)/)"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/lib/$1"
    },
    "snapshotSerializers": [
      "jest-serializer-vue"
    ],
    "testMatch": [
      "**/tests/unit/**/*.spec.js"
    ],
    "coverageDirectory": "tests/unit/coverage",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "lib/**/*.(js|vue)"
    ],
    "testURL": "http://localhost/"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "directories": {
    "lib": "lib",
    "doc": "docs"
  },
  "engines": {
    "node": ">= 4.0.0",
    "npm": ">= 3.0.0"
  },
  "files": [
    "lib/**/*",
    "dist/lib/**/*"
  ],
  "homepage": "https://icij.github.io/murmur/",
  "license": "MIT",
  "main": "dist/lib/@icij/murmur.umd.min.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/icij/murmur"
  }
}
