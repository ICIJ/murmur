{
  "name": "@icij/murmur",
  "version": "1.18.0",
  "private": false,
  "description": "Murmur is ICIJ's Design System for Bootstrap 4 and Vue.js",
  "author": "promera@icij.org",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "yarn build:docs && yarn build:lib",
    "lint": "vue-cli-service lint",
    "deploy": "node deploy.js",
    "build:docs": "vue-cli-service build --dest dist/docs",
    "build:lib": "vue-cli-service build --target lib --dest dist/lib 'lib/main.js'",
    "postpublish": "yarn deploy",
    "prepublishOnly": "yarn build",
    "test:unit": "vue-cli-service test:unit",
    "test:unit:watch": "vue-cli-service test:unit --watch"
  },
  "dependencies": {
    "@fortawesome/fontawesome": "^1.1.4",
    "@fortawesome/fontawesome-svg-core": "^1.2.28",
    "@fortawesome/free-brands-svg-icons": "^5.13.0",
    "@fortawesome/free-regular-svg-icons": "^5.13.0",
    "@fortawesome/free-solid-svg-icons": "^5.13.0",
    "@fortawesome/vue-fontawesome": "^0.1.9",
    "bootstrap": "^4.3.1",
    "bootstrap-vue": "^2.0.0-rc.27",
    "clipboard": "^2.0.6",
    "jsonp": "^0.2.1",
    "lodash": "4.17.15",
    "promise-polyfill": "^8.1.3",
    "vue": "^2.5.11",
    "vue-headroom": "^0.9.0",
    "vue-i18n": "^8.16.0"
  },
  "devDependencies": {
    "@kazupon/vue-i18n-loader": "^0.5.0",
    "@vue/cli-plugin-babel": "^4.2.3",
    "@vue/cli-plugin-eslint": "^4.2.3",
    "@vue/cli-plugin-unit-jest": "^4.2.3",
    "@vue/cli-service": "^4.2.3",
    "@vue/test-utils": "^1.0.0-beta.29",
    "@vuepress/markdown": "^1.4.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^25.2.4",
    "chalk": "^3.0.0",
    "chroma-js": "^2.1.0",
    "eslint": "^6.8.0",
    "eslint-plugin-vue": "^6.2.2",
    "front-matter": "^3.1.0",
    "gh-pages": "^2.2.0",
    "gray-matter": "^4.0.1",
    "highlight.js": "^9.18.1",
    "json-loader": "^0.5.7",
    "loader-utils": "^2.0.0",
    "markdown-it-container": "^2.0.0",
    "markdown-it-highlightjs": "^3.1.0",
    "node-sass": "^4.13.1",
    "ora": "^4.0.3",
    "sass-extract": "^2.1.0",
    "sass-extract-loader": "^1.1.0",
    "sass-loader": "^8.0.2",
    "toml": "^3.0.0",
    "url-join": "^4.0.1",
    "vue-cli-plugin-i18n": "^0.6.1",
    "vue-docgen-api": "^4.15.1",
    "vue-router": "^3.1.6",
    "vue-template-compiler": "^2.5.11",
    "vuex": "^3.1.3"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "jest": {
    "globalSetup": "./tests/unit/setup.js",
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "vue"
    ],
    "transform": {
      "^.+\\.vue$": "vue-jest",
      ".+\\.(css|styl|less|sass|scss|svg|png|jpg|ttf|woff|woff2)$": "jest-transform-stub",
      "^.+\\.jsx?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(bootstrap-vue)/)"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/lib/$1"
    },
    "snapshotSerializers": [
      "jest-serializer-vue"
    ],
    "testMatch": [
      "**/tests/unit/**/*.spec.js"
    ],
    "coverageDirectory": "tests/unit/coverage",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "lib/**/*.(js|vue)"
    ],
    "testURL": "http://localhost/"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "directories": {
    "lib": "lib",
    "doc": "docs"
  },
  "engines": {
    "node": ">= 4.0.0",
    "npm": ">= 3.0.0"
  },
  "files": [
    "lib/**/*",
    "dist/lib/**/*"
  ],
  "homepage": "https://icij.github.io/murmur/",
  "license": "MIT",
  "main": "dist/lib/@icij/murmur.umd.min.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/icij/murmur"
  }
}
